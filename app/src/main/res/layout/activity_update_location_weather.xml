<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateLocationWeatherActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID" />
            <TextView
                android:id="@+id/idConditionU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID of Condition" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude " />
            <TextView
                android:id="@+id/latitudeConditionU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude of Condition" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude " />
            <TextView
                android:id="@+id/longitudeConditionU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude of Condition" />
        </TableRow>


    </TableLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/clearDayU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear Day"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/clearNightU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear Night"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rainU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rain"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/snowU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Snow"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/sleetU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sleet"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/windU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wind"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/fogU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fog"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/cloudyU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cloudy"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/partlyCloudyDayU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Partly Cloudy Day"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/partlyCloudyNightU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Partly Cloudy Night"
            android:textAlignment="viewStart"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onUpdateClicked"
            android:text="Update" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDeleteClicked"
            android:text="Detele" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCancelClicked"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>